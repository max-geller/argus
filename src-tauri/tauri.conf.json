{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "argus",
  "version": "0.1.0",
  "identifier": "com.maxgeller.argus",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/argus/browser"
  },
  "app": {
    "windows": [
      {
        "title": "argus",
        "width": 1280,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
